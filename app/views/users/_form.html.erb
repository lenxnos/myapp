<div class="text-start mb-3">
  <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "text-info" %>
</div>


<div class="row justify-content-center">
  <div class="col-12 col-md-7">
      <%= render 'shared/errors', obj: @user %>
      <div class="card shadow rounded bg-light">
        <div class="card-body">
          <%= form_with(model: @user, local: true, data: { turbo: false })  do |f| %>
            <div class="mb-3 row">
              <%= f.label :username, class: "col-sm-3 col-lg-2 col-form-label" %>
              <div class="col-sm-9 col-lg-10">
                <%= f.text_field :username, class: "form-control", placeholder: "Enter a username" %>
              </div>
            </div>
            <div class="mb-3 row">
              <%= f.label :email, class: "col-sm-3 col-lg-2 col-form-label" %>
              <div class="col-sm-9 col-lg-10">
                <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
              </div>
            </div>

            <div class="mb-3 row">
              <%= f.label :password, class: "col-sm-3 col-lg-2 col-form-label" %>
              <div class="col-sm-9 col-lg-10">
                <%= f.password_field :password, class: "form-control", placeholder: "Choose a password" %>
              </div>
            </div>

           
            <div class="row justify-content-center">
              <div class="col text-center">
                <%= f.submit class: "btn btn-success" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>