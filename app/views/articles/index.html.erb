<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3">&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.description %></td>
        <td><%= link_to "Show", article %></td>
        <td><%= link_to "Edit", edit_article_path(article) %></td>
        <td><%= link_to "Destroy", article_path(article), data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<p>
  <%= link_to 'Create new article', new_article_path %>
</p>