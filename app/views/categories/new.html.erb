<section class="container">
  <h1 class="text-center mt-4">Create a new category</h1>

  <div class="container-form mb-4">

    <div class="text-start mb-3">
      <%= link_to "[ Cancel and return to articles listing ]", articles_path, class: "text-info" %>
    </div>
  
    <div class="row justify-content-center">
      <div class="col-12 col-md-7">
        <%= render 'shared/errors', obj: @category %>
          <div class="card shadow rounded bg-light">
            <div class="card-body">
              <%= form_with(model: @category, local: true, data: { turbo: false })  do |f| %>
                <div class="mb-3 row">
                  <%= f.label :name, "Category name", class: "col-sm-3 col-lg-2 col-form-label" %>
                  <div class="col-sm-9 col-lg-10">
                    <%= f.text_field :name, class: "form-control", placeholder: "Enter a name" %>
                  </div>
                </div>
                
                <div class="row justify-content-center">
                  <div class="col text-center">
                    <%= f.submit class: "btn btn-success" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>